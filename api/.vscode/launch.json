{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "address": "0.0.0.0",
      "localRoot": "${workspaceFolder}",
      "name": "Attach to Remote",
      "port": 9229,
      "remoteRoot": "/app/api",
      "request": "attach",
      "protocol": "inspector",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "restart": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Nest Debug",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "start:dev",
        "--",
        "--inspect-brk"
      ],
      "restart": true,
      "protocol": "auto",
      "port": 9229,
      "autoAttachChildProcesses": true,
      "outputCapture": "std"
    },
  ]
}